  GNU nano 5.4                                         strapi                                                  
# /etc/nginx/sites-available/strapi
server {
    server_name cms.turjoysaha.com;

    location / {
        proxy_pass http://localhost:1337;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Additional Nginx configurations can be added here

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/cms.turjoysaha.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/cms.turjoysaha.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = cms.turjoysaha.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name cms.turjoysaha.com;
    return 404; # managed by Certbot


}
